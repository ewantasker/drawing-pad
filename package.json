{
  "name": "drawing-pad",
  "version": "1.0.0",
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build:sass": "sass main.scss pre-tailwind.css",
    "build:css": "npx tailwindcss -i ./pre-tailwind.css -o ./styles.css --minify",
    "build": "npm run build:sass && npm run build:css"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "prettier": "^3.5.3",
    "sass": "^1.69.0",
    "tailwindcss": "^3.3.0"
  },
  "dependencies": {
    "http-server": "^14.1.1"
  }
}
